                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="start"
                android:gravity="center|start"
                android:text="Hallo"
                android:textColor="#111111"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
