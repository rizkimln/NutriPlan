            android:layout_marginBottom="46dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/searchCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35000002">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="start"
                android:gravity="center|start"
                android:text="Good Morning Rizki "
                android:textColor="#111111"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="start"
                android:layout_marginTop="-15dp"
                android:gravity="center|start"
                android:text="Let's keep living healthy!"
                android:textColor="#EBAB44"
                android:textSize="17dp"
                android:textStyle="normal">

            </TextView>


        </LinearLayout>


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/account_logo"
            android:contentDescription="Deskripsi gambar tombol"

            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/searchCardView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <!--        app:layout_marginTop="16dp">-->

        <!-- LinearLayout untuk pencarian (logo + EditText) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp">

            <!-- Icon Search -->

            <!-- EditText untuk input pencarian -->
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="Search Icon"
                android:padding="5dp"
                android:src="@drawable/ic_search"
                tools:layout_gravity="center" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search something..."
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


